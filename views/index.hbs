<div class='row'>
  <div class='col-6'>
    <h1>Users</h1>
  </div>
  <div class='col-6 d-flex justify-content-end'>
    <a href='/users' type='button' class='btn btn-primary align-self-center'>+ add user</a>
  </div>
</div>
<table class='table table-hover table-bordered'>
  <thead>
    <tr>
      <th scope='col'>#</th>
      <th scope='col'>First Name</th>
      <th scope='col'>Last Name</th>
      <th scope='col'>Email</th>
      <th scope='col'>Phone #</th>
      <th scope='col'>Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
      <tr>
        <th scope='row'>{{id}}</th>
        <td>{{first_name}}</td>
        <td>{{last_name}}</td>
        <td>{{email}}</td>
        <td>{{phone}}</td>
        <td>
          <a href='' class='btn btn-light btn-small'><i class='bi bi-eye'></i>
            View</a>
          <a href='' class='btn btn-light btn-small'><i class='bi bi-pencil'></i>
            Edit</a>
          <a href='' class='btn btn-light btn-small'><i class='bi bi-person-x'></i>
            Delete</a>
        </td>

      </tr>
    {{/each}}
  </tbody>
</table>